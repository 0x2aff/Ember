include "ServiceTypes.fbs";

namespace ember.multicast;

enum Flag { 
    QUERY,
    RESPONSE
};

table LocateService {
	flag:Flag;
	type:Service;
	known_hosts:[string]
}

table ResolveHost {
	host:string;
}

table ResolveHostResponse {
	host:string;
	ip:string;
	port:ushort;
	ttl:ushort;
}

union Data { LocateService, ResolveHost, ResolveHostResponse }

table MessageRoot {
	data:Data;
}

root_type MessageRoot;