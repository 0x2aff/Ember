namespace ember.messaging.character;

enum Status : ubyte {
	UNKNOWN_ERROR, OK, SERVER_LINK_ERROR, ILLFORMED_MESSAGE
}

table Character {
	guid:uint;
	name:string;
	race:ubyte;
	class_:ubyte;
	gender:ubyte;
	skin:ubyte;
	face:ubyte;
	hairstyle:ubyte;
	haircolour:ubyte;
	facialhair:ubyte;
	level:ubyte;
	zone:uint;
	map:uint;
	x:float;
	y:float;
	z:float;
	guild_id:uint;
	flags:uint;
	first_login:ubyte;
	pet_display_id:uint;
	pet_level:uint;
	pet_family:uint;
}

table CharacterList {
	status:Status;
	characters:[Character];
}

table RetrieveCharacters {
	account_name:string;
	realm_id:uint;
}

table RenameCharacter {
	account_name:string;
	realm_id:uint;
	character_id:uint;
}

table DeleteCharacter {
	account_name:string;
	realm_id:uint;
	character_id:uint;
}

table CreateCharacter {
	account_id:uint;
	realm_id:uint;
	name:string;
	race:ubyte;
    class_:ubyte;
    gender:ubyte;
    skin:ubyte;
    face:ubyte;
    hairstyle:ubyte;
    haircolour:ubyte;
    facialhair:ubyte;
    outfitid:ubyte;
}

table Response {
	status:Status;
}